<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/gradient_for_note_list_background"
    android:textSize="20sp"
    tools:context=".AddNoteActivity">


    <TextView
        android:id="@+id/existOrNot"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/text_creating_note"
        style="@style/UsualTitleStyle">
    </TextView>

    <TextView
        android:id="@+id/id_of_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            style="@style/UsualButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_time">
        </TextView>

        <TextView
            android:id="@+id/enter_the_date_note"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:gravity="center"
            style="@style/UsualEditViewStyle"
            android:hint="@string/hint_pick_the_time"
            android:onClick="pickDate">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_text"
            style="@style/UsualButtonStyle">
        </TextView>

        <EditText
            android:id="@+id/enter_the_text_note"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="9">

        <TextView
            style="@style/UsualButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="start"
            android:paddingStart="10dp"
            android:text="@string/text_category">
        </TextView>

        <Spinner
            android:id="@+id/pick_the_category_note"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="4.8"
            style="@style/UsualEditViewStyle"
            android:hint="@string/hint_pick_the_time">
        </Spinner>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:background="@android:drawable/ic_menu_add"
            android:onClick="addCategory">
        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/text_sum"
            style="@style/UsualButtonStyle">
        </TextView>

        <EditText
            android:id="@+id/sum_note"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:ems="10"
            style="@style/UsualEditViewStyle"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"
        android:onClick="create"
        android:text="@string/btn_save">
    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete_note"
        android:layout_row="1"
        android:layout_column="3"
        android:onClick="delete"
        android:text="@string/btn_delete">
    </Button>


</LinearLayout>